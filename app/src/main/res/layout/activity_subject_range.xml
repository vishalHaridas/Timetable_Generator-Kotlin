<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    tools:context=".SubjectRangeActivity">

    <include
        android:id="@+id/subRangeToolbar"
        layout="@layout/toolbar_dashboard"/>

    <!--    <Button-->
    <!--        android:id="@+id/subRangeBackButton"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginStart="40dp"-->
    <!--        android:layout_marginTop="25dp"-->
    <!--        android:text="Back"-->
    <!--        android:textAllCaps="false"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->

    <TextView
        android:id="@+id/subRangeHeadingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat"
        android:text="Subject Range"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/heading_text_color"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subRangeToolbar" />

    <TextView
        android:id="@+id/subSelSubTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/montserrat"
        android:text="Choose the number of subjects you'd like to take"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/text_subheading_color"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subRangeHeadingTextView" />

    <Button
        android:id="@+id/threeSubsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="72dp"
        android:height="72dp"
        android:background="@drawable/primary_button_color"
        android:fontFamily="@font/montserrat"
        android:includeFontPadding="false"
        android:text="3 Subjects"
        android:textAllCaps="false"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subSelSubTextView" />

    <Button
        android:id="@+id/fourSubsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="72dp"
        android:height="72dp"
        android:background="@drawable/primary_button_color"
        android:fontFamily="@font/montserrat"
        android:includeFontPadding="false"
        android:text="4 Subjects"
        android:textAllCaps="false"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/threeSubsButton"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>