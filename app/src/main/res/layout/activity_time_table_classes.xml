<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeTableClassesActivity">


    <include
        android:id="@+id/timeTableClassesOptionsToolbar"
        layout="@layout/toolbar_dashboard"/>

    <TextView
        android:id="@+id/tTableHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat"
        android:text="Pick Timetable"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/heading_text_color"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeTableClassesOptionsToolbar" />

    <TextView
        android:id="@+id/subSelSubTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/montserrat"
        android:text="Select a timetable"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/text_subheading_color"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tTableHeaderTextView" />

    <GridView
        android:id="@+id/tTableGenGridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subSelSubTextView"
        android:numColumns="8"/>


</androidx.constraintlayout.widget.ConstraintLayout>